<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jmailaT2S2A.Views.vSistemas"
             Title="vSistemas">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">

            <Label 
            Text="Tarea 2 - SISTEMA CALIFICACIONES"
            FontSize="20"
            TextColor="Blue"
            VerticalOptions="Center" 
            HorizontalOptions="Center"  />

        <Picker x:Name="pkEstudiantes" Title="Estudiantes">
            <Picker.Items>
                <x:String>Jorgito Guayaco</x:String>
                <x:String>Pedro Picapiedra</x:String>
                <x:String>Juan Perez</x:String>
                <x:String>Jesael Maila</x:String>
            </Picker.Items>
        </Picker>
         
        <Entry x:Name="txtSeguimiento1" Placeholder="Digite nota Seguimiento 1" Keyboard="Numeric"/>
        <Entry x:Name="txtExamen1" Placeholder="Digite nota Examen 1 " Keyboard="Numeric"/>
        <Label Text="Nota Parcial 1" />
        <Label x:Name="lblParcial1" Text="0" TextColor="DarkGreen"/>

        <Entry x:Name="txtSeguimiento2" Placeholder="Digite nota Seguimiento 2 " Keyboard="Numeric"/>
        <Entry x:Name="txtExamen2" Placeholder="Digite nota Examen 2 " Keyboard="Numeric"/>
        <Label Text="Nota Parcial 2" />
        <Label x:Name="lblParcial2" Text="0" TextColor="DarkGreen"/>

        <DatePicker x:Name="dtFecha" />

        <Button Text="CALCULAR NOTAS DEL ESTUDIANTE"
        BackgroundColor="DarkBlue"
        TextColor="White"
        Clicked="btnEstudiantes_Clicked"/>

    </VerticalStackLayout>
</ContentPage>